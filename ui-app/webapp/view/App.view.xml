<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="my.ui5.app.controller.App">
    <App>
        <MessagePage
            showHeader="false"
            text="{i18n>message.text}"
            description="{i18n>message.description}"
            icon="sap-icon://sap-ui5"
        >
            <buttons>
                <Button text="{i18n>message.button.text}" press=".onPressButton()" />
            </buttons>
        </MessagePage>
    </App>
</mvc:View>
